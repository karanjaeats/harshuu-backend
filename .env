# ===============================
# APPLICATION
# ===============================
NODE_ENV=production
PORT=10000
APP_NAME=HARSHUU
APP_URL=https://harshuu-backend.onrender.com

# ===============================
# DATABASE (MongoDB)
# ===============================
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/harshuu?retryWrites=true&w=majority

# ===============================
# AUTH / JWT
# ===============================
JWT_SECRET=harshuu_super_secure_jwt_secret_2025
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=harshuu_refresh_secret_2025
JWT_REFRESH_EXPIRES_IN=7d

# ===============================
# OTP / AUTH LIMITING
# ===============================
OTP_EXPIRY_MINUTES=5
OTP_RESEND_LIMIT=3
OTP_RATE_LIMIT=5

# ===============================
# RAZORPAY (PAYMENTS)
# ===============================
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=harshuu_webhook_secret

# ===============================
# PLATFORM BUSINESS RULES
# ===============================
MIN_ORDER_VALUE=99
BASE_DELIVERY_FEE=30
PER_KM_CHARGE=8
SURGE_MULTIPLIER=1.0
PLATFORM_COMMISSION_PERCENT=15

# ===============================
# DELIVERY PARTNER
# ===============================
DELIVERY_ASSIGN_RADIUS_KM=5
DELIVERY_INCENTIVE_PER_ORDER=20

# ===============================
# SECURITY
# ===============================
RATE_LIMIT_WINDOW_MIN=15
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=10

# ===============================
# LOGGING
# ===============================
LOG_LEVEL=info

# ===============================
# NOTIFICATIONS (Future Ready)
# ===============================
SMS_PROVIDER=mock
WHATSAPP_PROVIDER=mock
